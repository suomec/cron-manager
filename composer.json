{
  "name": "suomec/cron-manager",
  "description": "Crontab generator and installer from configuration files",
  "type": "library",
  "license": "MIT",
  "config": {
    "vendor-dir": "var/vendor"
  },
  "repositories": [],
  "require": {
    "php": ">=7.4",
    "ext-json": "*"
  },
  "bin": "bin/php-crontab-install",
  "autoload": {
    "psr-4": {
      "CronManager\\": "src",
      "CronManager\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.8",
    "friendsofphp/php-cs-fixer": "^3.9",
    "phpunit/phpunit": "^9.5"
  }
}
